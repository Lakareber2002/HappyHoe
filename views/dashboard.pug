doctype html
html(lang="en")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Dashboard
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
    link(rel='stylesheet' href='/public/css/dashboard.css')
  body
    .container
      // Navbar
      nav.navbar.navbar-expand-lg.navbar-light.bg-primary-subtle.mb-4
        .container-fluid
          img.d-inline-block.align-text-top(src='/public/image/pl.png' alt='Logo' width='50' height='50' style='border-radius:50%;')
          a.navbar-brand(href='#') Happy Hoe
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          form.d-flex
            a.btn.btn-primary(href='/logout') Logout

      // Dashboard Widgets
      .row
        .col-md-4
          .card.mb-4
            .card-body
              h5.card-title Sales
              p.card-text Manage sales data and tasks.
              a.btn.btn-primary(href='/sales') View Sales
        .col-md-4
          .card.mb-4
            .card-body
              h5.card-title Credit Sales
              p.card-text Manage credit sales records.
              a.btn.btn-primary(href='/credit-sales') View Credit Sales
        .col-md-4
          .card.mb-4
            .card-body
              h5.card-title Procurements
              p.card-text Manage procurement processes.
              a.btn.btn-primary(href='/procurements') View Procurements

