              td #{produceItem.producename}
              td #{produceItem.producetype}
              td #{produceItem.date}
              td #{produceItem.time}
              td #{produceItem.tonnage}
              td #{produceItem.cost}
              td #{produceItem.source}
              td #{produceItem.dealer}
